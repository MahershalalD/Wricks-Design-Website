      <link href="https://fonts.googleapis.com/css2?family=Anton&family=Heebo:wght@900&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" />
   <!-- fontawesome -->
  <script src="https://kit.fontawesome.com/2cf437a4a5.js" crossorigin="anonymous"></script>
  </head>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 logo-side">
        <center><img src="tr.png" alt="" class="logo animate__animated animate__bounce animate__faster img-fluid"></center>
         <center><h3 class="company-name logo animate__animated animate__bounce animate__slower">Wricks Designs</h3></center> 
        </div>
        <div class="col-lg-6 login-side">
          <h1 class="sign-word">Log In</h1>
         <center><form action="/login" method="POST">
          <i class="fas fa-user fa-3x" style="padding-bottom: 30px;"></i>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Mail Id" name="username" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <div class="col mb-3">
              <input type="password" class="form-control"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                placeholder="Password" id="psw" name="password" required>
            </div>
          </div>
            <div id="message">
              <div class="row">
                <div class="col-lg-3">
                  <p id="letter" class="invalid"> <b>lowercase</b> letter (1)</p>
                </div>
                <div class="col-lg-3">
                  <p id="capital" class="invalid"><b>uppercase</b> letter (1)</p>
                </div>
                <div class="col-lg-3">
                  <p id="number" class="invalid"><b>number (1)</b></p>
                </div>
                <div class="col-lg-3">
                  <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                </div>
              </div>
            </div>
          <button type="submit" class="btn-lo">Log In</button>
        </form>
        <hr>
        <p class="or">Or connect with</p>
        <button type="submit" class="sign-gogle"><img src="icons8-google.svg" width="50px" height="30px"><a href="/auth/google" style="text-decoration: none !important; color: white;">Log in with Google</a> </button>
        </form></center>
          <div class="text-center text-md-center" style="padding-top: 15px;">
            <p>Powered by <img src="icon-adamz.png" alt="">Maher Shalal D</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
